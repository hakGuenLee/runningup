<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/title"
        android:layout_width="216dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="58dp"
        android:alpha="1"
        android:fontFamily="@font/scdream_bold"
        android:gravity="center_horizontal|top"
        android:text="안녕하세요!"
        android:textColor="#ff59D286"
        android:textSize="42sp"
        app:layout_constraintBottom_toTopOf="@+id/second_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/second_text"
        android:layout_width="304dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="235dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="180dp"
        android:alpha="1"
        android:fontFamily="@font/scdream_light"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="8sp"
        android:text="러닝업은\n당신의 페이스에 비례한\n 음량 조절로 더 신나고\n 즐겁게 달릴 수 있도록\n 동기부여를 도와주는 어플입니다"
        android:textColor="#ff3D3D3D"
        android:textFontWeight="200"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/request_text"
        android:layout_width="211dp"
        android:layout_height="96dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="101dp"
        android:layout_marginBottom="188dp"
        android:alpha="1"
        android:fontFamily="@font/scdream_light"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="8sp"
        android:text="앱의 사용을 위해\n 필요한 권한을\n 허용해 주세요"
        android:textColor="#ff3D3D3D"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.035"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="174dp"
        android:layout_height="81dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#ff59D286"
        android:fontFamily="@font/scdream_light"
        android:text="허용하기"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/request_text"
        app:layout_constraintVertical_bias="0.954" />


</androidx.constraintlayout.widget.ConstraintLayout>