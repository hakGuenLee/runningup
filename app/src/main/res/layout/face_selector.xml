<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/face_selector"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context=".FaceSelectActivity">


    <TextView
        android:id="@+id/face_guider"
        android:layout_width="244dp"
        android:layout_height="120dp"
        android:layout_marginTop="63dp"
        android:alpha="1"
        android:gravity="center_horizontal|top"
        android:text="어떤 빠르기로 달리시나요?"
        android:textColor="#ffFAFAFA"
        android:textSize="42sp"
        android:textFontWeight="400"
        tools:layout_editor_absoluteX="255dp"
        tools:layout_editor_absoluteY="153dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/slow_face"
        android:layout_width="204dp"
        android:layout_height="133dp"
        android:background="@drawable/face_selector_shape"
        android:gravity="center"
        android:text="천천히 뛰기"
        android:textColor="#ffFAFAFA"
        android:textFontWeight="400"
        android:textSize="28sp"
        android:layout_marginTop="70dp"
        tools:layout_editor_absoluteX="298dp"
        tools:layout_editor_absoluteY="455dp"
        app:layout_constraintTop_toBottomOf="@id/face_guider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/regular_face"
        android:layout_width="204dp"
        android:layout_height="133dp"
        android:background="@drawable/face_selector_shape"
        android:gravity="center"
        android:text="적당히 달리기"
        android:textColor="#ffFAFAFA"
        android:textFontWeight="400"
        android:textSize="28sp"
        tools:layout_editor_absoluteX="298dp"
        tools:layout_editor_absoluteY="676dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/slow_face"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/fast_face"
        android:layout_width="204dp"
        android:layout_height="133dp"
        android:background="@drawable/face_selector_shape"
        android:gravity="center"
        android:text="질주"
        android:textColor="#ffFAFAFA"
        android:textFontWeight="400"
        android:textSize="28sp"
        tools:layout_editor_absoluteX="298dp"
        tools:layout_editor_absoluteY="894dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/regular_face"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />



</androidx.constraintlayout.widget.ConstraintLayout>