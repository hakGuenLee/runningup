<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/slow_runner"
        android:layout_width="190dp"
        android:layout_height="57dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="224dp"
        android:text="조금 느리게 뛰기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/running_selector"
        android:layout_width="190dp"
        android:layout_height="57dp"
        android:layout_marginTop="56dp"
        android:text="평균 속도로 뛰기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slow_runner" />

    <Button
        android:id="@+id/fastest_runner"
        android:layout_width="190dp"
        android:layout_height="57dp"
        android:layout_marginTop="64dp"
        android:text="전력질주"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/running_selector" />

</androidx.constraintlayout.widget.ConstraintLayout>